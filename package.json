{
  "name": "@borderless/ts-scripts",
  "version": "0.12.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Simple, mostly opinionated, scripts to build TypeScript modules",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/borderless/ts-scripts.git"
  },
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "homepage": "https://github.com/borderless/ts-scripts",
  "bugs": {
    "url": "https://github.com/borderless/ts-scripts/issues"
  },
  "bin": {
    "ts-scripts": "dist/bin.js"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "bin": "tsx src/bin.ts",
    "build": "npm run bin -- build",
    "check": "npm run bin -- check",
    "format": "npm run bin -- format",
    "lint": "npm run bin -- lint",
    "prepare": "npm run bin -- install",
    "prepublishOnly": "npm run build",
    "specs": "npm run bin -- specs",
    "test": "npm run bin -- test"
  },
  "files": [
    "configs/",
    "dist/"
  ],
  "keywords": [
    "scripts",
    "typescript",
    "package",
    "maintain"
  ],
  "peerDependencies": {
    "typescript": "*",
    "vitest": "*"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "arg": "^5.0.1",
    "ci-info": "^3.3.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "find-up": "^6.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "pkg-conf": "^4.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-package": "^1.3.0",
    "rimraf": "^3.0.2",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.13",
    "tsx": "^3.4.2",
    "typescript": "^4.7.2",
    "vitest": "^0.14.2"
  },
  "typings": "dist/index.d.ts",
  "ts-scripts": {
    "project": [
      "tsconfig.build.json"
    ]
  }
}
