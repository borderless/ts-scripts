{
  "name": "@borderless/ts-scripts",
  "version": "0.0.0",
  "description": "Simple, mostly opinionated, scripts to build TypeScript modules",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": "dist/bin.js",
  "files": [
    "configs/",
    "dist/"
  ],
  "scripts": {
    "lint": "ts-node src/bin.ts lint",
    "format": "ts-node src/bin.ts format",
    "build": "ts-node src/bin.ts build",
    "specs": "ts-node src/bin.ts specs",
    "test": "ts-node src/bin.ts test",
    "preinstall": "npm run -s build",
    "postinstall": "node dist/bin.js install",
    "prepublishOnly": "npm run -s build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/borderless/ts-scripts.git"
  },
  "keywords": [
    "scripts",
    "typescript",
    "package",
    "maintain"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/borderless/ts-scripts/issues"
  },
  "homepage": "https://github.com/borderless/ts-scripts",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "husky": "^5.0.9",
    "ts-node": "^9.1.1",
    "typescript": "4.1.5"
  },
  "peerDependencies": {
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@types/is-ci": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "arg": "^5.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "is-ci": "^2.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.8",
    "pkg-conf": "^3.1.0",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "zod": "^1.11.11"
  }
}
