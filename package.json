{
  "name": "@borderless/ts-scripts",
  "version": "0.5.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Simple, mostly opinionated, scripts to build TypeScript modules",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/borderless/ts-scripts.git"
  },
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "homepage": "https://github.com/borderless/ts-scripts",
  "bugs": {
    "url": "https://github.com/borderless/ts-scripts/issues"
  },
  "bin": {
    "ts-scripts": "dist/bin.js"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "bin": "node --loader ts-node/esm src/bin.ts",
    "build": "npm run bin build",
    "check": "npm run bin check",
    "format": "npm run bin format",
    "lint": "npm run bin lint",
    "prepare": "npm run bin install && npm run bin build",
    "specs": "npm run bin specs",
    "test": "npm run bin test"
  },
  "files": [
    "configs/",
    "dist/"
  ],
  "keywords": [
    "scripts",
    "typescript",
    "package",
    "maintain"
  ],
  "peerDependencies": {
    "@types/jest": "^27.0.0",
    "typescript": "*"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "arg": "^5.0.0",
    "ci-info": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "pkg-conf": "^4.0.0",
    "prettier": "^2.4.1",
    "prettier-plugin-package": "^1.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "zod": "^3.9.8"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "typings": "dist/index.d.ts",
  "ts-scripts": {
    "project": [
      "tsconfig.build.json"
    ]
  }
}
